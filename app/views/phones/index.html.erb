<div class="background">
  <div class= "container">
    <div class="mt-3 text-center text-black">
      <h1>Louer un téléphone</h1>
      <%= form_tag phones_path, method: :get do %>
        <div class="search-container">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Modèle/marque"%>
          <%= submit_tag "Rechercher", class: "m-2 p-2 btn btn-primary bouton"%>
        </div>
      <% end %>
    </div>
    <div class="card-list">
        <% @phones.each do |phone| %>
          <%= link_to phone_path(phone) do %>
            <div class="card-trip card-border">
              <% if phone.photo.present? %>
                <%= cl_image_tag phone.photo.key%>
                <% end %>
              <div class="card-trip-infos">
              <div>
                <h2><%= phone.model %></h2>
                <p>Ce model est fait pour vous!</p>
              </div>
                <h3 class="card-trip-pricing"><%= phone.price %>€/jours</h3>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
