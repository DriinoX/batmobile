<div class="background">
  <div class= "container">
    <div class="mt-3 text-center text-black">
      <h1>Louer un téléphone</h1>
      <%= form_tag phones_path, method: :get do %>
        <div class="search-container">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Modèle"%>
          <%= submit_tag "Rechercher", class: "m-2 p-2 btn btn-primary bouton"%>
        </div>
      <% end %>
    </div>
    <div class="card-list">
        <% @phones.each do |phone| %>
          <%= link_to phone_path(phone) do %>
            <div class="card-trip card-border">
              <img width="200px" src="https://boulanger.scene7.com/is/image/Boulanger/bfr_overlay?layer=comp&$t1=&$product_id=Boulanger/0190198457639_h_f_l_0&wid=350&hei=350" />
              <div class="card-trip-infos">
              <div>
                <h2><%= phone.model %></h2>
                <p>Ce model est fait pour vous!</p>
              </div>
                <h3 class="card-trip-pricing">99.99€/mois</h3>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
