
<div class="container">
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos d-flex">
      <div>
      <h1 class="align-middle"><%= @phone.model %></h1>
      <p class="align-middle">Marque du téléphone : <%= @phone.brand %></p>
      <p class="align-middle">Aspect du téléphone : <%= @phone.state %></p>
      <p>--------------------------------------</p>
      <p>  </p>
      <p class="align-middle"><%= @phone.user.username %></p>
      <p class="align-middle">description du produit : <%= @phone.description %></p>
      </div>
      <div class="prix-reservation-info">
        <p class= "prix">AFFICHER LE PRIX ICI</p>
        <button type="button" class="btn btn-success"><%= link_to 'Valider la location', new_phone_booking_path(@phone) %></button>
      </div>
      <% @phone.id == @first_phones_id ? @previous = @last_phones_id : @previous = @previous_phone %>

      <%= link_to("&larr Previous", @previous) %>

      <% @phone.id == @last_phones_id ? @next = @first_phones_id : @next = @next_phone %>

      <%= link_to("Next &rarr;", @next) %>
    </div>
  </div>
</div>






